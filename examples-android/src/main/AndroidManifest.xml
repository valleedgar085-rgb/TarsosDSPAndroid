<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.hogent.tarsos.dsp.example">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TarsosDSP">
        
        <!-- Main launcher activity - Shows example list -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pitch Detection Example -->
        <activity
            android:name=".PitchDetectionActivity"
            android:exported="false"
            android:label="Pitch Detection" />

        <!-- Sound Detector Example -->
        <activity
            android:name=".SoundDetectorActivity"
            android:exported="false"
            android:label="Sound Detector" />

        <!-- Audio Player Example -->
        <activity
            android:name=".AudioPlayerActivity"
            android:exported="false"
            android:label="Audio Player" />

    </application>

</manifest>
